#
# .zshalias
#

#
# From me
#
# chrome
alias chrome="/Applications/Google\ Chrome.app/Contents/MacOS/Google\ Chrome"
# excal -> open -a excalibur, shortcut for latex spellchecking
alias excal="open -a excalibur"
# firefox
alias firefox="/Applications/Firefox.app/Contents/MacOS/firefox"
# f2py -> f2py2.6, to make my life easier
alias f2py="f2py2.6"
# gap -> /Applications/gap4r4/bin/gap.sh, to use gap via terminal
alias gap="/Applications/gap4r4/bin/gap.sh"
# g{cc,++,fortran} -> g{cc,++,fortran}-4.7, to use newest gnu c compiler
alias gcc="gcc-4.7"
alias g++="g++-4.7"
alias gfortran="gfortran-4.7"
# GUI emacs
alias gmacs="/Users/grahamenos/Applications/Emacs.app/Contents/MacOS/Emacs"
# shortcut to C++11 with warnings, etc.
alias gpp="g++-4.7 -std=c++11 -Wall -Wextra -Weffc++ -pedantic -O3"
# gpom -> git pull origin master, to save on keystrokes
alias gpom="git pull origin master"
# jc -> j console, to bend my brain
alias jc="/Applications/j64-701/bin/jconsole"
# JuliaLang
alias julia="/Applications/Julia.app/Contents/Resources/julia/bin/julia"
# pythons
alias ipy="/usr/local/share/python/ipython"
alias py2.5="python2.5"
alias py2.6="/usr/bin/python2.6"
alias py2.7="python2.7"
alias py3="python3"
# rm -> rm -i, to ask for conformation
alias rm="rm -i"
# safari
alias safari="/Applications/Safari.app/Contents/MacOS/Safari"
# sage -> /Applications/.../sage, to use sage via terminal
alias sage="/Applications/sage/sage"
# vless -> long-winded-vim-command, to use vim like less with highlighting
alias vless="vim -u /usr/share/vim/vim72/macros/less.vim"
# venv -> source virtualenvwrapper
alias venv="source /usr/local/bin/virtualenvwrapper.sh"

#
# From generic work file
#
alias la="ls -aF"
alias lag="ls -lag"
alias ll="ls -lF"
alias rename="mv"

#
# With help from someone at work
#
alias clean="rm -f *{~,.bak} .*.sw{o,p} *.hi *.o"
alias cp="nocorrect cp -i"
alias h="history"
alias l="ls -FG"
alias lll="ls -rtl"
alias mv="nocorrect mv -i"
alias pls="pwd;ls"
alias quit=exit
