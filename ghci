import Text.Show.Pretty (pPrint, ppShow)
import Language.Haskell.HsColour
import Language.Haskell.HsColour.Colourise

let colorPrint = System.IO.putStrLn . hscolour TTY defaultColourPrefs False False "" False . ppShow


:set editor /usr/local/bin/vim
:set -XOverloadedStrings
:set -Wall
:set prompt "\ESC[36mλ⋙ \ESC[m"
:set +m
:set +t
:def hlint const . return $ ":! hlint \"src\""
:def hoogle \s -> return $ ":! hoogle --count=17 \"" ++ s ++ "\""
:def pf \s -> return $ ":! pointfree \"" ++ s ++ "\""
:def pretty const . return $ ":set -interactive-print pPrint"
:def pretty-colors const . return $ ":set -interactive-print colorPrint"
:def no-pretty const . return $ ":set -interactive-print System.IO.print"
